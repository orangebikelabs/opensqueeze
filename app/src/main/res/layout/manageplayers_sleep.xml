<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/player_sleep_text"
        style="@style/Text.SingleLine.AutoSize"
        android:layout_width="match_parent"
        android:layout_height="@dimen/singleline_autosize_height"
        android:gravity="center"
        android:text="@string/player_sleep_text"
        app:autoSizeMinTextSize="10sp" />

    <!-- seekbar maxheight set to large value to fix rendering bug on pre-sdk 21 -->
    <SeekBar
        android:id="@+id/sleepBar"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:contentDescription="@string/sleep_slider_desc"
        android:maxHeight="1000dp" />

    <TimePicker
        android:id="@+id/timePicker"
        style="@style/SleepDialogTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp" />

</LinearLayout>